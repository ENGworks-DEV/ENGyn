                </Rectangle.Fill>
            </Rectangle>
            <TextBlock FontSize="14" TextAlignment="Center">Center</TextBlock>
        </WrapPanel>
    </radialMenu:RadialMenuItem>


    <radialMenu:RadialMenuItem x:Key="RadialMenuItemRight" Style="{StaticResource FancyRadialMenuItem}">
