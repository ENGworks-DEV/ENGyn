<UserControl x:Class="NW_GraphicPrograming.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   xmlns:VplControl="clr-namespace:TUM.CMS.VplControl.Core;assembly=TUM.CMS.VplControl"
       
    Height="400" Width="800">

    <Grid Margin="0,0,0,0">

        <VplControl:VplControl Name="VplControl" ClipToBounds="True" Background="White" Margin="0,0,0,0" Grid.Row="1" Grid.RowSpan="1"/>
        <Button x:Name="runButton" Content="Refresh" Margin="33,9.8,0,9.8" Grid.Row="3" Click="Button_Click" HorizontalAlignment="Left" Width="100"/>

        <Grid.RowDefinitions>

            <RowDefinition Height="15"></RowDefinition>
            <RowDefinition/>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>



    </Grid>

</UserControl>
